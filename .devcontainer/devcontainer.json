{
  "name": "DegenZ Lounge Dev (with SSH)",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspace",

  // Core container setup
  "containerEnv": {
    "NODE_ENV": "development",
    "TZ": "UTC"
  },

  // Essential extensions
  "extensions": [
    "dbaeumer.vscode-eslint",
    "esbenp.prettier-vscode",
    "prisma.prisma",
    "bradlc.vscode-tailwindcss",
    "GitHub.copilot"
  ],

  // Port forwarding (including SSH)
  "forwardPorts": [
    3000,  // Next.js
    5555,  // Prisma Studio
    2222   // SSH
  ],

  // Features including SSH
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "18",
      "packageManager": "npm"
    },
    "ghcr.io/devcontainers-contrib/features/prisma:2": {},
    "ghcr.io/devcontainers/features/sshd:1": {
      "version": "latest",
      "startServer": true
    }
  },

  // Project setup
  "postCreateCommand": "npm ci && npx prisma generate",

  // Development environment variables
  "remoteEnv": {
    "DATABASE_URL": "postgresql://postgres:postgres@db:5432/degenez-dev?schema=public",
    "NEXTAUTH_URL": "http://localhost:3000",
    "NEXTAUTH_SECRET": "dev-secret-123",
    "DEBUG": "degenez:*"
  },

  // VS Code settings
  "settings": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
    },
    "typescript.tsdk": "node_modules/typescript/lib",
    "eslint.packageManager": "npm",
    "tailwindCSS.includeLanguages": {
      "typescript": "typescriptreact"
    },
    "remote.SSH.remotePlatform": {
      "your-codespace-name": "linux"
    }
  },

  // GitHub Codespaces specific settings
  "customizations": {
    "codespaces": {
      "openFiles": ["README.md"]
    },
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  }
}
